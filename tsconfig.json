{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom","es2015"], //https://github.com/sinclairzx81/typescript-bundle/blob/master/src/options.ts#L118
    //"allowSyntheticDefaultImports": false,
    "allowJs": false,
    "outDir": "output",
    //"strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    //"traceResolution": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "typings/*",
        "*"
      ]
    },
    //"outFile": "semaea.js"
    "sourceMap": true
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}