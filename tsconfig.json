{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom","es2015"],
    "allowSyntheticDefaultImports": false,
    "allowJs": true,
    "allowUnreachableCode": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    //"traceResolution": true,
    "module": "commonjs",
    "outDir": "output",
    //"rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "typings/*",
        "*"
      ]
    },
    //"outFile": "semaea.js"
    "sourceMap": true
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}